<% if flash[:error] %>
<% flash[:error].each do |error| %>
    <%= error %>
    <% end %>
    <% end %>

    <%= form_for @user do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
    
        <%= f.label :username %>
        <%= f.text_field :username %>
    
        <%= f.label :password %>
        <%= f.text_field :password %>
    
        <%= f.label :email %>
        <%= f.text_field :email %>
    
        <%= f.submit %>
    
        <% end %>
